{
    "manifest_version": 3,
    "name": "Persistent Screenshot Extension",
    "description": "Takes screenshots on URL changes and stores them.",
    "version": "1.0",
    "permissions": [
      "storage", 
      "tabs", 
      "activeTab", 
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "index.html"
    }
  }
  